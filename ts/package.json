{
  "name": "allcoder-ts",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "bin": {
    "allcoder-ts": "./dist/index.js"
  },
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "lint": "eslint .",
    "format": "prettier --write .",
    "typecheck": "tsc --noEmit",
    "pretest": "npm run build",
    "test": "vitest run"
  },
  "dependencies": {
    "@iarna/toml": "^2.2.5",
    "ajv": "^8.17.1",
    "commander": "^11.1.0",
    "fastify": "^4.27.2",
    "yaml": "^2.5.1"
  },
  "devDependencies": {
    "@types/node": "^20.16.10",
    "@typescript-eslint/eslint-plugin": "^7.18.0",
    "@typescript-eslint/parser": "^7.18.0",
    "eslint": "^8.57.1",
    "eslint-config-prettier": "^9.1.0",
    "prettier": "^3.3.3",
    "tsup": "^8.3.0",
    "typescript": "^5.6.3",
    "vitest": "^2.1.3"
  },
  "tsup": {
    "entry": [
      "src/index.ts",
      "src/api.ts"
    ],
    "format": [
      "esm"
    ],
    "splitting": false,
    "dts": false,
    "sourcemap": true,
    "clean": true
  }
}
